<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/guideHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to change pictures"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/guideImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/guideImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/startBInGuide"
        app:layout_constraintTop_toBottomOf="@id/guideHint"
        app:srcCompat="@drawable/guide_map" />

    <Button
        android:id="@+id/startBInGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK TO MENU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
